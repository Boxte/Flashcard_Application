#!/usr/bin/python
from tkinter import *

'''
    Window is 600 by 600 and cannot be resized
'''

class Window(Frame):
  
    def __init__(self, parent):
        Frame.__init__(self, parent, background="white")   
         
        self.parent = parent
        
        self.initUI()
        
    
    def initUI(self):
      
        self.parent.title("Flashcard Application")
        self.pack(fill=BOTH, expand=1)
        
        button = Button(50, 50)
        
    def quitButton(self):
        quitBut = Button(self, text="Quit",
                         command=self.quit)
        quitBut.place(x=50,y=50)
        
class Button():
    def __init__(self, x_coordinate, y_coordinate):
        self.x_coordinate = x_coordinate
        self.y_coordinate = y_coordinate
    def quitButton(self):
        quitBut = Button(self, text="Quit",
                         command=self.quit)
        quitBut.place(x=self.x_coordinate,y=self.y_coordinate) 


def main():
  
    root = Tk()
    root.geometry("600x600+150+50")
    app = Window(root)
    root.resizable(0,0)
    root.mainloop()  

if __name__ == '__main__':
    main()